<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.ananpengkhun.myprojectfinal.fragment.AddProductTypeFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_polygon_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="รหัสชนิดสินค้า"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/ed_prod_type_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ชื่อชนิดสินค้า"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/ed_prod_type_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="อธิบาย"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/ed_prod_type_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_add_prod_type_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_click_selector"
                android:text="ยืนยัน"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
